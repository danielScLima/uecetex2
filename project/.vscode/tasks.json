{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build UECEtex project",
      "type": "shell",
      "command": "latexmk -pdf -outdir=build documento.tex",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "Erase UECEtex build content",
      "type": "shell",
      "command": "rm /project/build/*",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "List files in UECEtex build folder",
      "type": "shell",
      "command": "ls /project/build/",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "List with details the files in UECEtex build folder",
      "type": "shell",
      "command": "ls -la /project/build/",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "Execute tree in UECEtex folder",
      "type": "shell",
      "command": "tree /project",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    // More tasks here, if you need them.
  ]
}